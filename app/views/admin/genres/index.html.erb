<div class="container">
  <div class="row">
    <div class="col-7">
      <h3>ジャンル一覧・追加</h3>
      <div class="row g-3 align-items-center">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div class="col-auto">
            <label class="col-form-label">ジャンル名</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :name %>
          </div>
          <div class="col-auto">
            <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-5"></div>
    <div class="row">
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success " %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
