<div class="container">
  <div class="row">
     <h4 class="ml-5">商品一覧</h4>
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-light rounded-circle p-0 shadow" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div>
  
  <div class="row">
    
  </div> 
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.tax_exclusive_price %></td>
                <td><%= item.genre.name %></td> 
                <td></td>
                <td>
                  <% if @item.is_active == false %>
                    <strong class="text-black-50">販売停止中</strong>
                  <% else %>
                    <strong class="text-success">販売中</strong>
                  <% end %>
                </td>
              </tr>
             <% end %>
          </tbody>
      </table>
</div>     
<div class="row mx-auto"><%= paginate @items %></div>

