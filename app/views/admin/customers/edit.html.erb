<div class="container">
  <div class="row mt-3">
    <div class="col offset-sm-1 col-sm-6">
      <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h4>
      <div class="row mt-4 flex-column align-items-center">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <table>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :first_name, class: "form-control col-md-10" %></td>
            <td><%= f.text_field :last_name, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :first_name_kana, class: "form-control col-md-10" %></td>
            <td><%= f.text_field :last_name_kana, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :post_code, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, class: "form-control col" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= f.radio_button(:is_deleted, false) %> 有効　<%= f.radio_button(:is_deleted, true) %> 退会</td>
          </tr>
        </table>
        <%= f.submit "変更を保存", class: "btn btn-outline-secondary btn-sm col-3 offset-md-3" %>
      <% end %>
      </div>
    </div>
  </div>
</div>