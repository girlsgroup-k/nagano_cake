<div class="container">
<h4 class="ml-5 mt-2">管理者ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mb-2 mt-3">
    <div class="col-md-5 offset-md-2">
      <div class="field">
        <label class="col-md-4 offset-md-2">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-5 offset-md-2">
      <div class="field">
        <label class="col-md-4 offset-md-2">パスワード</label>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
  </div>
  <div class="mb-3 mt-4">
    <div class="col-md-5 offset-md-2">
      <div class="actions md-4 offset-md-6">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
<%= render "admin/shared/links" %>
</div>
