<div class="container">
<h2>管理者ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-auto">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-auto">
        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-auto">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>
<%= render "admin/shared/links" %>
</div>
