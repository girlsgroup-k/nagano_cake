<h3>マイページ</h3>
    <strong>登録情報</strong>
    <%= link_to "編集する", customers_edit_path, class: "btn btn-success" %>
<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>
  <strong>配送先</strong>
  <%= link_to "一覧を見る", delivery_addresses_path, class: "btn btn-primary" %>

  <strong>注文履歴</strong>
  <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>