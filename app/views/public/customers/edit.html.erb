<div class="container">
  <div class="row">
    <h3>会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: customers_update_path(@customer.id) do |f| %>
      <table>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :first_name %></td>
          <td><%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.text_field :last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to "退会する", customers_check_path, class: "btn btn-danger" %>
    <% end %>

  </div>
</div>