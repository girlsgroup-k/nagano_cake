<div class="container">
  <div class="row">
    <h4 class="ml-5 mb-4">配送先編集</h4>
  </div>
  <%= form_with model: @delivery_address do |f| %>
  <div class="row">
    <div class="col-3">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-6">
      <%= f.text_field :post_code, placeholder: "0000000" %>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-6">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町０－０", size: :"65" %>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row">
    <div class="col-3">
      <p>宛名</p>
    </div>
    <div class="col-6">
      <%= f.text_field :name, placeholder: "令和道子" %>
    </div>
    <div class="col-3">
      <%= f.submit '変更内容を保存', class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <% end %>
</div>