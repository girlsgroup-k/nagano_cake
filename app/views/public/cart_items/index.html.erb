<div class="container">
  <div class="row">
    <div class="col">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.tax_exclusive_price %></td>
            <td>
              <%= form_with url: cart_item_path(cart_item.id), model: cart_item do |f| %>
                <%= f.select :item_quantity, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td></td>
            <td></td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <button type="button" class="btn btn-primary">買い物を続ける</button>
    </div>
    <div class="col">
      <table>
        <tbody>
          <tr>
            <th scope="row">合計金額</th>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <button type="button" class="btn btn-success">情報入力に進む</button>
    </div>
  </div>
</div>