<div class="container">
  <div class="row">
    <div class="col">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_item_image(40,60) %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with url: cart_item_path(cart_item.id), model: cart_item do |f| %>
                <%= f.select :item_quantity, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col">
      <table class="table table table-bordered">
        <tbody>
          <tr>
            <th scope="row">合計金額</th>
            <td>
              <% @cart_items.each do |cart_item| %>
                <% @total += cart_item.subtotal %>
              <% end %>
              <%= @total %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @order, url: orders_path do |f| %>
        <% @cart_items.each do |cart_item| %>
          <%= f.hidden_field :id, :value => cart_item.id %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <% end %>
        <%= f.submit '情報入力に進む', class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>