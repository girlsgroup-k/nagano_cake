 <header style="height: 90px;" class="fixed-top">
    <div class="container-fluid" style=" background-color: rgba(168, 56, 63, 1); ">
      <div class="row">
        <div class="col float-left">
          <%= link_to root_path,class: 'btn' do %>
             <%= image_tag 'logo.png', size: "100x60" %>
          <% end %>
        </div>
        <div class="row m-auto pr-2">
          <% if customer_signed_in? %>
            <div class="col float-center d-flex align-items-center text-white ">
              <div>ようこそ、<%= current_customer.first_name %> さん！</div>
            </div>
            <div class="header_link">
              <div class="d-grid gap-2 d-md-block">
                <div class="float-right">
                  <%= link_to my_page_path,class: 'btn btn-outline-light' do %>
                    マイページ
                  <% end %>
                  <%=  link_to items_path,class: 'btn btn-outline-light' do %>
                    商品一覧
                  <% end %>
                  <%=  link_to cart_items_path ,class: 'btn btn-outline-light' do %>
                    カート
                  <% end %>
                  <%= link_to destroy_customer_session_path, method: :delete,class: 'btn btn-outline-light' do %>
                    ログアウト
                  <% end %>
                </div>
              <% elsif admin_signed_in? %>
                <div class="float-right">
                  <%= link_to admin_items_path,class: 'btn btn-outline-light' do %>
                    商品一覧
                  <% end %>
                  <%=  link_to admin_customers_path,class: 'btn btn-outline-light' do %>
                    会員一覧
                  <% end %>
                  <%= link_to admin_top_path,class: 'btn btn-outline-light' do %>
                    注文履歴一覧
                  <% end %>
                  <%=  link_to admin_genres_path,class: 'btn btn-outline-light' do %>
                    ジャンル一覧
                  <% end %>
                  <%= link_to destroy_admin_session_path, method: :delete,class: 'btn btn-outline-light' do %>
                    ログアウト
                  <% end %>
                </div>
              <% else %>
                <div class="float-right">
                  <%= link_to about_path,class: 'btn btn-outline-light' do %>
                    About
                  <% end %>
                  <%=  link_to items_path,class: 'btn btn-outline-light' do %>
                    商品一覧
                  <% end %>
                  <%= link_to new_customer_registration_path,class: 'btn btn-outline-light' do %>
                    新規登録
                  <% end %>
                  <%= link_to new_customer_session_path ,class: 'btn btn-outline-light' do %>
                    ログイン
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <span class="botder border-dark"></span>
      </div>
    </div>
 </header>